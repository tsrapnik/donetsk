    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "debug on linux",
            "cargo": {
                "args": [
                    "build",
                    "--bin=donetsk",
                    "--package=donetsk"
                ],
                "filter": {
                    "name": "donetsk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "debug unit tests on linux",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=donetsk",
                    "--package=donetsk"
                ],
                "filter": {
                    "name": "donetsk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "debug on windows",
            "program": "${workspaceRoot}/target/debug/donetsk.exe",
            "cargo": {
                "args": [
                    "build",
                    "--bin=donetsk",
                    "--package=donetsk"
                ],
                "filter": {
                    "name": "donetsk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "debug unit tests on windows",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=donetsk",
                    "--package=donetsk"
                ],
                "filter": {
                    "name": "donetsk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}